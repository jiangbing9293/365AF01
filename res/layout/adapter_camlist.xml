<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/camlist_img_default"
        android:layout_width="80dip"
        android:layout_height="60dip"
        android:layout_margin="5dip"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/pic_video_default"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/camlist_txt_name1"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="#638caa"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/camlist_txt_name2"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:textColor="#7d7d7d"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <Button
            android:id="@+id/camlist_btn_setupvideo"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dip"
            android:background="@drawable/btn_setupvideo_seletor" />

    </RelativeLayout>

</LinearLayout>