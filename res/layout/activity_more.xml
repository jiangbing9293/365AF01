<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f0ed"
    android:orientation="vertical" >

    <freelancer.worldvideo.view.TitleView
        android:id="@+id/more_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <Button
            android:id="@+id/more_help"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:background="@drawable/list_2"
            android:drawableLeft="@drawable/icon_help_more"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/icon_more"
            android:gravity="left|fill_vertical"
            android:paddingLeft="15dip"
            android:paddingRight="20dip"
            android:text="@string/more_help"
            android:textColor="@color/main_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/more_question"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:background="@drawable/list_2"
            android:drawableLeft="@drawable/icon_info_more"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/icon_more"
            android:gravity="left|fill_vertical"
            android:paddingLeft="15dip"
            android:paddingRight="20dip"
            android:text="@string/more_question"
            android:textColor="@color/main_color"
            android:textSize="16sp" />
        <Button
            android:id="@+id/more_default_wifi"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:background="@drawable/list_2"
            android:drawableLeft="@drawable/icon_info_more"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/icon_more"
            android:gravity="left|fill_vertical"
            android:paddingLeft="15dip"
            android:paddingRight="20dip"
            android:text="@string/more_default_wifi"
            android:textColor="@color/main_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>